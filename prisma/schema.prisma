generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String          @id @default(uuid())
  email            String          @unique
  name             String?
  resumeAnalysis   ResumeAnalysis? @relation(fields: [resumeAnalysisId], references: [id])
  resumeAnalysisId String?         @unique
}

model ResumeAnalysis {
  id          String       @id @default(uuid())
  summary     String
  skills      String[] // Supported in PostgreSQL/MySQL 8+, otherwise use JSON/text
  experiences Experience[] // Optional by default (empty if none)
  education   Education[]
  projects    Project[]
  user        User?        @relation
  createdAt   DateTime     @default(now())
}

model Experience {
  id               String         @id @default(uuid())
  jobTitle         String
  company          String
  duration         String?
  responsibilities String[]
  resumeId         String
  resume           ResumeAnalysis @relation(fields: [resumeId], references: [id])
}

model Education {
  id             String         @id @default(uuid())
  degree         String
  institution    String
  graduationYear String?
  resumeId       String
  resume         ResumeAnalysis @relation(fields: [resumeId], references: [id])
}

model Project {
  id          String         @id @default(uuid())
  name        String
  description String
  resumeId    String
  resume      ResumeAnalysis @relation(fields: [resumeId], references: [id])
}
